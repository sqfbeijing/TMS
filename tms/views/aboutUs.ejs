<script>
	$(function() {
		var $adviceResetBtn = $(".toushu .btns .reset");
		var $adviceCommitBtn = $(".toushu .btns .commit");
	// 点击重置，则清空
	$adviceResetBtn.click(function(event) {
		$(this).parents(".content-desc").find('.writeInput').val("");
	});
	// 点击提交按钮
	$adviceCommitBtn.click(function(event) {
		var words = $.trim($(this).parents(".content-desc").find('.writeInput').val());

		if (words === "") {
			alert("输入不能为空！");
			return;
		}
		if (words.length > 60) {
			alert("文本过长！不能超过60个字符！");
			return;
		}
		//执行
		var time = Library.getTime();
		var timeValue = Library.getTimeValue();

		$.ajax({
			url: '/userAdvice',
			type: 'post',
			data: {
				time: time,
				timeValue: timeValue,
				content: words
			},
			success: function(res) {
				if (res === "ok") {
					alert("提交成功!");
				}
			}
		});

	});
})
</script>
